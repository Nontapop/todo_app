<h1>Todo List</h1>

<h2>Incomplete Tasks</h2>
<ul>
  <% @incomplete_tasks.each do |task| %>
    <li>
      <%= task.title %> - incomplete
      <%= button_to 'Mark as Complete', complete_task_path(task), method: :patch, class: "btn btn-success" %>
      <%= button_to 'Delete', task_path(task), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
    </li>
  <% end %>
</ul>

<h2>Completed Tasks</h2>
<ul>
  <% @complete_tasks.each do |task| %>
    <li>
      <%= task.title %> - complete
      <%= button_to 'Delete', task_path(task), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
    </li>
  <% end %>
</ul>

<h3>Create a New Task</h3>
<%= form_with model: @task, local: true do |form| %>
  <div class="form-group">
    <%= form.label :title, "Task Title" %>
    <%= form.text_field :title, class: "form-control", required: true %>
  </div>
  <div class="form-group">
    <%= form.submit "Create Task", class: "btn btn-primary" %>
  </div>
<% end %>
